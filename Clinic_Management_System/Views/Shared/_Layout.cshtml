<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic_Management_System</title>
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,700,700i" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinic_Management_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/layout/header.css" asp-append-version="true" /> 
    @* <link rel="stylesheet" href="~/Home_page/home.css" asp-append-version="true" /> *@
@*     <link rel="stylesheet" href="~/Med_carts/Med_carts.css" asp-append-version="true" />  *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/material-design-iconic-font@2.2.0/dist/css/material-design-iconic-font.min.css">

</head>
<body>
    @if (!(ViewData["HideHeader"] as bool? ?? false))
    {
        <nav>
            <div class="navbar">
                <i class='bx bx-menu'></i>
                <div class="logo"><a href="@Url.Action("Index", "Home")">Clinic Management System</a></div>
                <div class="nav-links">
                    <div class="sidebar-logo">
                        <span class="logo-name">Clinic Management System</span>
                        <i class='bx bx-x'></i>
                    </div>
                    <ul class="links">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li>
                            <a href="#">Medicines</a>
                            <i class='bx bxs-chevron-down htmlcss-arrow arrow  '></i>
                            <ul class="htmlCss-sub-menu sub-menu">
                                @if (ViewBag.MedCategories != null)
                                {
                                    foreach (var category in ViewBag.MedCategories)
                                    {
                                        <li>
                                            <a href="@Url.Action("Medicine", "Home", new { CatId = category.MedCatId })">
                                                @category.MedCatName
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                        <li>
                            <a href="#">Scientific Machines</a>
                            <i class='bx bxs-chevron-down js-arrow arrow '></i>
                            <ul class="js-sub-menu sub-menu">
                                @if (ViewBag.ScientificCategories != null)
                                {
                                    foreach (var category in ViewBag.ScientificCategories)
                                    {
                                        <li>
                                            <a href="@Url.Action("Scientific", "Home", new { CatId = category.SciCatId })">
                                                @category.SciCatName
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("Lecture", "Home")">Lectures</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Seminar", "Home")">Seminars</a>
                        </li>

                        <li>
                            <a href="#">Practicals</a>
                            <i class='bx bxs-chevron-down js-arrow arrow '></i>
                            <ul class="js-sub-menu sub-menu">
                                @if (ViewBag.PracticalCategories != null)
                                {
                                    foreach (var category in ViewBag.PracticalCategories)
                                    {
                                        <li>
                                            <a href="@Url.Action("Practical", "Home", new { CatId = category.PracCatId })">
                                                @category.PracCatName
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                        <li><a href="@Url.Action("Index", "Home")#facultySection">Faculty</a></li>

                            @{
                                var userRole = Context.Session.GetString("Userrole");
                            }

                            @if (!string.IsNullOrEmpty(userRole))
                            {
                                // Show BecomeSeller only for RoleId 2 (User)
                                if (userRole == "2")
                                {
                                    <li>
                                        <a asp-controller="Seller" asp-action="BecomeRecruiter">BecomeSeller</a>
                                    </li>
                                }

                                // Show Logout for all logged-in users (any role)
                                <li>
                                    <a asp-controller="Home" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                // Show Login/Register when not logged in
                                <li>
                                    <a asp-controller="Home" asp-action="Login">Login</a>
                                </li>
                            }
                    </ul>
                </div>
            </div>
        </nav>

    }
    <div class="container">\
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Clinic_Management_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Home_page/home.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
