@model IEnumerable<Clinic_Management_System.Models.ScientificCategory>

@{
    Layout = "~/Views/Shared/_Seller.cshtml";
}

<h1>ShowSciCategory</h1>

<p>
    <a href="@Url.Action("AddSciCategory", "Seller")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SciCatName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SciCatName)
            </td>
            <td>
                    <a asp-controller="Seller" asp-action="UpdateScientificCategory" asp-route-id="@item.SciCatId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SciCatId">Details</a> |
                    <a asp-controller="Seller" asp-action="DelScientificCategory" asp-route-id="@item.SciCatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
