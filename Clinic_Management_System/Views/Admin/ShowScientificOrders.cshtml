@model IEnumerable<Clinic_Management_System.Models.ScientificOrder>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1 style="margin: 50px;">ShowScientificOrders</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScientificId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SciName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SciCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SciPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionScreenshot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SciName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SciCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SciPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAddress)
            </td>
                <td>
                    <img src="~/@item.TransactionScreenshot" width="150" height="150" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <a asp-controller="Admin" asp-action="DelScientificOrder" asp-route-id="@item.ScientificOrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
