@model Clinic_Management_System.Models.AddFacultyViewModel

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewData["Title"] = "Add Faculty";
}

<style>
    .faculty-form-wrapper {
        max-width: 600px;
        margin: 60px auto;
        padding: 30px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        .faculty-form-wrapper h1,
        .faculty-form-wrapper h4 {
            text-align: center;
            font-weight: 700;
            color: #343a40;
        }

    .form-group label {
        font-weight: 600;
    }

    .form-control,
    select.form-control {
        border-radius: 6px;
    }

    .btn-primary {
        width: 100%;
        font-weight: 600;
        padding: 10px;
        border-radius: 6px;
        margin-top: 15px;
    }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="faculty-form-wrapper">
    <h1>Add Faculty</h1>
    <h4 class="mb-4">Faculty Details</h4>
    <hr />

    <form asp-action="AddFaculty" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyName" class="control-label">Name</label>
            <input asp-for="faculty.FacultyName" class="form-control" />
            <span asp-validation-for="faculty.FacultyName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyGender" class="control-label">Gender</label>
            <select asp-for="faculty.FacultyGender" class="form-control">
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="faculty.FacultyGender" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyAge" class="control-label">Age</label>
            <input asp-for="faculty.FacultyAge" class="form-control" type="number" min="18" max="100" />
            <span asp-validation-for="faculty.FacultyAge" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyEmail" class="control-label">Email</label>
            <input asp-for="faculty.FacultyEmail" class="form-control" type="email" />
            <span asp-validation-for="faculty.FacultyEmail" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyImage" class="control-label">Image</label>
            <input type="file" name="img" class="form-control" />
            <span asp-validation-for="faculty.FacultyImage" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyQualification" class="control-label">Qualification</label>
            <input asp-for="faculty.FacultyQualification" class="form-control" />
            <span asp-validation-for="faculty.FacultyQualification" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultySpecialization" class="control-label">Specialization</label>
            <input asp-for="faculty.FacultySpecialization" class="form-control" />
            <span asp-validation-for="faculty.FacultySpecialization" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="faculty.FacultyPhone" class="control-label">Phone</label>
            <input asp-for="faculty.FacultyPhone" class="form-control" type="tel" />
            <span asp-validation-for="faculty.FacultyPhone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>

    <div class="back-link">
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</div>
