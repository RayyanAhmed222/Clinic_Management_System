@model IEnumerable<Clinic_Management_System.Models.ScientificInfo>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1>ShowSci</h1>

<p>
    <a href="@Url.Action("AddSci", "Admin")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScientificName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScientificDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScientificImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScientificPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScientificCatNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificDescription)
            </td>
            <td>
                    <img src="~/@item.ScientificImage" width="150" height="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScientificCatNavigation.SciCatId)
            </td>
            <td>
                <a asp-controller="Admin" asp-action="UpdateSci" asp-route-id="@item.ScientificId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ScientificId">Details</a> |
                <a a asp-controller="Admin" asp-action="DelSci" asp-route-id="@item.ScientificId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
