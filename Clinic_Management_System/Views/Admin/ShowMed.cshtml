@model IEnumerable<Clinic_Management_System.Models.MedicinesInfo>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1>ShowMed</h1>

<p>
    <a href="@Url.Action("AddMed", "Admin")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedCatNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MedName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedDescription)
                </td>
                <td>
                    <img src="~/@item.MedImage" width="150" height="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedCatNavigation.MedCatName)
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="UpdateMed" asp-route-id="@item.MedId">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.MedId">Details</a> |
                    <a asp-controller="Admin" asp-action="DelMed" asp-route-id="@item.MedId">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
