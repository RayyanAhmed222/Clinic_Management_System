@model IEnumerable<Clinic_Management_System.Models.Bank>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1 style="margin: 50px;">ShowBank</h1>

<p>
    <a href="@Url.Action("AddBank", "Admin")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccNumber)
            </td>
            <td>
                    <a asp-controller="Admin" asp-action="UpdateBank" asp-route-id="@item.AccId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccId">Details</a> |
                    <a asp-controller="Admin" asp-action="DelBank" asp-route-id="@item.AccId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
