@model IEnumerable<Clinic_Management_System.Models.Faculty>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1 style="margin: 50px;">ShowFaculty</h1>

<p>
    <a href="@Url.Action("AddFaculty", "Admin")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyQualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultySpecialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyEmail)
            </td>
                <td>
                    <img src="~/@item.FacultyImage" width="150" height="150" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyQualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultySpecialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyPhone)
            </td>
            <td>
                    <a asp-controller="Admin" asp-action="UpdateFaculty" asp-route-id="@item.FacultyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FacultyId">Details</a> |
                    <a asp-controller="Admin" asp-action="DelFaculty" asp-route-id="@item.FacultyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
