@model IEnumerable<Clinic_Management_System.Models.Lecture>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1>ShowLec</h1>

<p>
    <a href="@Url.Action("AddLec", "Admin")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LecName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecDatetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecStockstatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LecName)
            </td>
                <td>
                    <img src="~/@item.LecImg" width="150" height="150" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecDatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecStockstatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecPrice)
            </td>
            <td>
                <a asp-controller="Admin" asp-action="UpdateLec" asp-route-id="@item.LecId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LecId">Details</a> |
                <a asp-controller="Admin" asp-action="DelLec" asp-route-id="@item.LecId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
