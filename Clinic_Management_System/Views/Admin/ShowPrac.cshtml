@model IEnumerable<Clinic_Management_System.Models.Practical>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h1>ShowPrac</h1>

<p>
    <a href="@Url.Action("AddPractical", "Admin")"
       style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: background-color 0.3s ease;">
        Add More
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PracName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracDatetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParcDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracStockstatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracticalCategoryNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracticalFacultyNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PracName)
            </td>
                <td>
                    <img src="~/@item.PracImg" width="150" height="150" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracDatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParcDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracStockstatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticalCategoryNavigation.PracCatId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticalFacultyNavigation.FacultyId)
            </td>
            <td>
                    <a asp-controller="Admin" asp-action="UpdatePractical" asp-route-id="@item.PracId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PracId">Details</a> |
                    <a asp-controller="Admin" asp-action="DelPractical" asp-route-id="@item.PracId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
