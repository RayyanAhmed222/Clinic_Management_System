@model Clinic_Management_System.Models.AddMedViewModel

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewData["Title"] = "Update Medicines Category";
}

<style>
    .medcat-form-wrapper {
        max-width: 480px;
        margin: 60px auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .medcat-form-wrapper h1,
        .medcat-form-wrapper h4 {
            text-align: center;
            font-weight: 700;
            color: #222;
            margin-bottom: 20px;
        }

    .form-group label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        border-radius: 6px;
        padding: 8px 12px;
        margin-bottom: 14px;
    }

    .btn-primary {
        width: 100%;
        font-weight: 600;
        padding: 10px;
        border-radius: 6px;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    .back-link {
        margin-top: 25px;
        text-align: center;
    }
</style>

<div class="medcat-form-wrapper">
    <h1>Update Medicine Category</h1>
    <h4>Medicines Category Details</h4>
    <hr />

    <form asp-action="UpdateMedCategory" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="SelectedCategory.MedCatId" />

        <div class="form-group">
            <label asp-for="SelectedCategory.MedCatName">Category Name</label>
            <input asp-for="SelectedCategory.MedCatName" class="form-control" placeholder="Enter Category Name" />
            <span asp-validation-for="SelectedCategory.MedCatName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<div class="back-link">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>
