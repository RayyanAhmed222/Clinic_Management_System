@model Clinic_Management_System.Models.OrderMedFormViewModel

@if (Model.BankDetails.Any())
{
    <div class="card mb-4 shadow-sm border-primary-custom" style="margin-top: 50px;">
        <div class="card-header bg-primary-custom" style="background: #3E8DA8; color: white;">
            <h5 class="mb-0">Bank Details for Payment</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                @foreach (var bank in Model.BankDetails)
                {
                    <li class="list-group-item">
                        <strong>@bank.AccName</strong><br />
                        IBAN/NUMBER: <code>@bank.AccNumber</code>
                    </li>
                }
            </ul>
        </div>
    </div>
}

<h2 class="mb-4">Confirm Your Medicine Order</h2>

<form asp-action="MedOrderForm" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="MedId" />
    <input type="hidden" asp-for="Type" />


    <div class="mb-3">
        <label class="form-label">Medicine Name</label>
        <input class="form-control" value="@(Model.Type == "Sell" ? Model.SellMedicine?.MedName : Model.Medicine?.MedName)" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input class="form-control" value="@(Model.Type == "Sell" ? Model.SellMedicine?.MedCatNavigation?.MedCatName : Model.Medicine?.MedCatNavigation?.MedCatName)" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input class="form-control" value="@(Model.Type == "Sell" ? Model.SellMedicine?.MedPrice : Model.Medicine?.MedPrice)" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="MedicineOrder.UserEmail" class="form-label">Email</label>
        <input asp-for="MedicineOrder.UserEmail" class="form-control" />
        <span asp-validation-for="MedicineOrder.UserEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MedicineOrder.UserAddress" class="form-label">Address</label>
        <textarea asp-for="MedicineOrder.UserAddress" class="form-control"></textarea>
        <span asp-validation-for="MedicineOrder.UserAddress" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MedicineOrder.TransactionScreenshot" class="form-label">Transaction Screenshot</label>
        <input type="file" name="TransactionScreenshot" class="form-control" />
        <span asp-validation-for="MedicineOrder.TransactionScreenshot" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit Order</button>
</form>

