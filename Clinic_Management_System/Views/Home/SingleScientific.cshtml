@using Clinic_Management_System.Models
@{
    ViewData["Title"] = "Scientific Details";

    var scientificItems = ViewBag.Sci as List<ScientificInfo>;
    var sellScientificItem = ViewBag.SellSci as SellScientificInfo;
    var itemType = ViewBag.Type as string;
}

<div class="container" style="margin-top: 150px; margin-bottom: 100px;">
    @if (itemType == "Normal" && scientificItems != null && scientificItems.Any())
    {
        var item = scientificItems.First(); // Assuming only one item per ID
        <div class="single-product">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/@item.ScientificImage" alt="@item.ScientificName" class="img-fluid rounded shadow" />
                </div>
                <div class="col-md-6">
                    <h2>@item.ScientificName</h2>
                    <p><strong>Description:</strong> @item.ScientificDescription</p>
                    <p><strong>Category:</strong> @item.ScientificCatNavigation?.SciCatName</p>
                    <p><strong>Stock Status:</strong> @item.StockStatus</p>
                    <p><strong>Price:</strong> @item.ScientificPrice</p>
                    <a asp-controller="Home" asp-action="SciOrderForm" asp-route-id="@item.ScientificId" asp-route-type="Normal" class="btn btn-primary mt-2">
                        <i class="tf-ion-android-cart"></i> Buy Now
                    </a>
                </div>
            </div>
        </div>
    }
    else if (itemType == "Sell" && sellScientificItem != null)
    {
        <div class="single-product">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/@sellScientificItem.ScientificImage" alt="@sellScientificItem.ScientificName" class="img-fluid rounded shadow" />
                </div>
                <div class="col-md-6">
                    <h2>@sellScientificItem.ScientificName</h2>
                    <p><strong>Brand Name:</strong> @sellScientificItem.ScientificBrandName</p>
                    <p><strong>Description:</strong> @sellScientificItem.ScientificDescription</p>
                    <p><strong>Category:</strong> @sellScientificItem.ScientificCatNavigation?.SciCatName</p>
                    <p><strong>Stock Status:</strong> @sellScientificItem.StockStatus</p>
                    <p><strong>Price:</strong> @sellScientificItem.ScientificPrice.ToString("C")</p>
                    <a asp-controller="Home" asp-action="SciOrderForm" asp-route-id="@sellScientificItem.ScientificId" asp-route-type="Sell" class="btn btn-primary mt-2">
                        <i class="tf-ion-android-cart"></i> Buy Now
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <strong>No Scientific details found.</strong>
        </div>
    }
</div>
