@{
    ViewData["Title"] = "Home Page";
}

@{
    var carousels = ViewBag.Carousels as List<Clinic_Management_System.Models.Carousel>;  // Ensure correct model namespace
    int index = 0;
}

<section style="margin-top: 70.5px;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var item in carousels)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="@(index == 0 ? "active" : "")"></li>
                index++;
            }
        </ol>

        @{
            index = 0;
        }

        <div class="carousel-inner">
            @foreach (var item in carousels)
            {
                <div class="carousel-item @(index == 0 ? "active" : "")">
                    <img class="d-block w-100" src="~/@item.CarouselImg" alt="Slide @(index + 1)">
                </div>
                index++;
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>



<section class="product section">
    <div class="container">
        <h2 style="margin-top: 150px;" class="mb-4">Categories</h2>
        <div id="categoryCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    int count = 0; 
                    int itemsPerSlide = 4;
                    var categories = (List<Clinic_Management_System.Models.Category>)ViewBag.cat;
                }

                @foreach (var group in categories.Select((x, i) => new { x, i })
                .GroupBy(x => x.i / itemsPerSlide))
                {
                    var isActive = count == 0 ? "active" : "";
                    <div class="carousel-item @isActive">
                        <div class="row">
                            @foreach (var item in group)
                            {
                                var category = item.x;
                                <div class="col-md-3">
                                    <a asp-controller="Home"asp-action="@category.CategorysName"asp-route-CatId="@category.CategorysId"class="text-decoration-none text-dark">
                                        <div class="card shadow-sm h-100 mx-2">
                                            <img src="~/@category.CategorysImg" class="card-img-top" style="height: 150px; object-fit: contain;" />
                                            <div class="card-body text-center">
                                                <h6 class="card-title">@category.CategorysName</h6>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    count++;
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>










@{
    var faculties = (List<Clinic_Management_System.Models.Faculty>)ViewBag.fac;
    int slideCount = faculties.Count;
}

<section id="facultySection" class="testimonial text-center" style="margin-top: 150px;">
    <div class="container">
        <div id="facultyCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                @for (int i = 0; i < slideCount; i++)
                {
                    var active = i == 0 ? "active" : "";
                    <div class="carousel-item @active">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-md-4">
                                <img src="~/@faculties[i].FacultyImage" class="img-fluid rounded-circle" style="width: 250px; height: 250px; object-fit: cover;" alt="Faculty Photo">
                            </div>
                            <div class="col-md-6 text-start">
                                <h3><strong>@faculties[i].FacultyName</strong>, <em>@faculties[i].FacultyQualification</em></h3>
                                <hr style="width: 350px;"  />
                                <h5><strong>Specialization</strong></h5>
                                <p class="lead">@faculties[i].FacultySpecialization</p>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#facultyCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#facultyCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

            <!-- Optional indicators -->
            <div class="mt-3">
                @for (int i = 0; i < slideCount; i++)
                {
                    var activeDot = i == 0 ? "bg-dark" : "bg-secondary";
                    <span class="d-inline-block rounded-circle @activeDot" style="width: 10px; height: 10px; margin: 2px;"></span>
                }
            </div>
        </div>
    </div>
</section>



@{
    var feedbacks = (List<Clinic_Management_System.Models.Feedback>)ViewBag.Feedbacks;
    int feedbackIndex = 0;
}

<section class="testimonial text-center" style="margin-top: 150px;">
    <div class="container">
        <div id="feedbackCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                @foreach (var feedback in feedbacks)
                {
                    var active = feedbackIndex == 0 ? "active" : "";
                    <div class="carousel-item @active">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-md-4">
                                <img src="~/@feedback.ProductImg" class="img-fluid rounded-circle" style="width: 250px; height: 250px; object-fit: cover;" alt="Product Image">
                            </div>
                            <div class="col-md-6 text-start">
                                <h4><strong>@feedback.ClientName</strong> reviewed <em>@feedback.ProductName</em></h4>
                                <hr />
                                <p class="lead">@feedback.ClientFeedback</p>
                            </div>
                        </div>
                    </div>
                    feedbackIndex++;
                }

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

            <div class="mt-3">
                @for (int i = 0; i < feedbacks.Count; i++)
                {
                    var activeDot = i == 0 ? "bg-dark" : "bg-secondary";
                    <span class="d-inline-block rounded-circle @activeDot" style="width: 10px; height: 10px; margin: 2px;"></span>
                }
            </div>
        </div>
    </div>
</section>


